<section class="gh-canvas">
    <GhCanvasHeader class="gh-canvas-header">
        <h2 class="gh-canvas-title" data-test-screen-title>
            <LinkTo @route="settings">Settings</LinkTo>
            <span>{{svg-jar "arrow-right"}}</span>
            Tiers
        </h2>
    </GhCanvasHeader>

    <section class="view-container">
        <div class="gh-tier-list">
            <div class="gh-tier-card">
                <span class="gh-tier-list-icon">{{svg-jar "members"}}</span>
                <h3 class="gh-tier-card-name">
                    Free membership
                </h3>
                <p class="gh-tier-card-description">
                    {{this.settings.membersFreePriceDescription}}
                </p>
                <LinkTo @route="settings.tiers" class="gh-btn" {{action (toggle "showFreeMembershipModal" this)}}>
                    <span>Customize</span>
                </LinkTo>
            </div>

            {{#each this.tiers as |tier|}}
            <div class="gh-tier-card">
                <span class="gh-tier-list-icon"><div class="gh-tier-list-siteicon" style={{this.iconStyle}}></div></span>
                <h3 class="gh-tier-card-name">
                    {{tier.name}}
                </h3>
                <p class="gh-tier-card-description">
                    {{tier.description}}
                </p>
                <LinkTo @route="settings.tier" @model={{tier}} class="gh-btn">
                    <span>Customize</span>
                </LinkTo>
            </div>
            {{/each}}
        </div>
    </section>
</section>

{{#if this.showFreeMembershipModal}}
    <GhFullscreenModal
    @modal="free-membership-settings"
    @close={{this.closeFreeMembershipModal}}
    @modifier="action wide tier-ssprice" />
{{/if}}
